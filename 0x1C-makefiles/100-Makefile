CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
